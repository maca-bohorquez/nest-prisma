// schema.prisma

model User {
  id                 Int       @id @default(autoincrement())
  username           String    @unique
  email              String    @unique
  password           String
  passwordResetToken String?  
  role               Role      @relation(fields: [roleId], references: [id])
  roleId             Int
  createdAt          DateTime  @default(now())
  status             Boolean
}

model Role {
  id          Int      @id @default(autoincrement())
  description String
  users       User[]
}
